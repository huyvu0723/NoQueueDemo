<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.CouponActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48">

        <LinearLayout
            android:id="@+id/linear_layout_icon_back"
            android:layout_width="@dimen/dp64"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="COUPONS CỦA TÔI"
            android:textColor="@color/red"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />
    </LinearLayout>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/view_pager_coupon_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/white"
        app:stl_clickable="true"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@color/light_black"
        app:stl_defaultTabTextHorizontalPadding="@dimen/dp25"
        app:stl_defaultTabTextMinWidth="@dimen/dp0"
        app:stl_defaultTabTextSize="@dimen/sp14"
        app:stl_distributeEvenly="true"
        app:stl_dividerThickness="@dimen/dp0"
        app:stl_indicatorColor="@color/red"
        app:stl_indicatorCornerRadius="@dimen/dp1"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="@dimen/dp2"
        app:stl_indicatorWidth="auto"
        app:stl_titleOffset="auto_center" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_pager_coupon_tab" />

</LinearLayout>