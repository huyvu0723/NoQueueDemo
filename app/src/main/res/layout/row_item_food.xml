<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_view_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp156"
                android:adjustViewBounds="true"
                android:minWidth="@dimen/dp156"
                android:minHeight="@dimen/dp156"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:riv_corner_radius_top_left="@dimen/dp4"
                app:riv_corner_radius_top_right="@dimen/dp4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_order_selected_quantity"
                    android:layout_width="@dimen/dp36"
                    android:layout_height="@dimen/dp36"
                    android:background="@drawable/button_quantity"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:visibility="gone"
                    tools:text="0" />
            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="@dimen/dp132"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp10"
            android:ellipsize="end"
            android:gravity="left"
            android:minLines="2"
            android:textColor="#363e2e"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            tools:text="Sườn xào chua ngọt" />

        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="@dimen/dp132"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp10"
            android:textColor="@color/red"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            tools:text="30.000 đ" />
    </LinearLayout>


</android.support.v7.widget.CardView>