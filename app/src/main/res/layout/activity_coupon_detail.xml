<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CouponDetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <LinearLayout
                        android:id="@+id/linear_layout_icon_back"
                        android:layout_width="@dimen/dp64"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_back" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/image_view_coupon_image"
                        android:layout_width="@dimen/dp296"
                        android:layout_height="@dimen/dp296"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/text_view_expired"
                        android:layout_width="@dimen/dp112"
                        android:layout_height="@dimen/dp32"
                        android:layout_gravity="center"
                        android:background="@color/red"
                        android:gravity="center"
                        android:text="Hết hạn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:id="@+id/text_view_coupon_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp24"
                    android:layout_marginRight="@dimen/dp24"
                    android:layout_marginTop="@dimen/dp24"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp22"
                    android:text="Giảm giá 25% trên tất cả đơn hàng đặt hàng online thông qua ứng dụng VietFood. Không áp dụng cùng chương trình khuyến mãi khác." />

                <TextView
                    android:id="@+id/text_view_coupon_expired_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:layout_marginLeft="@dimen/dp24"
                    android:layout_marginRight="@dimen/dp24"
                    android:lineSpacingExtra="@dimen/sp22"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp18"
                    android:text="Hạn sử dụng: 12/08/2018" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/linear_layout_order_now"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:background="@drawable/background_checkout_orders"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đặt hàng ngay"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>